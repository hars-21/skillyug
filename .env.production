# Production Environment Variables
# Copy this file to .env and update with your production values

# ===== DATABASE =====
POSTGRES_DB=skillyug
POSTGRES_USER=skillyug_user
POSTGRES_PASSWORD=your-super-secure-postgres-password-here

# ===== APPLICATION SECRETS =====
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
AUTH_SECRET=your-super-secret-auth-key-for-nextauth
NEXTAUTH_SECRET=your-super-secret-nextauth-key-minimum-32-characters

# ===== PAYMENT GATEWAY =====
RAZORPAY_KEY=your_live_razorpay_key_here
RAZORPAY_SECRET=your_live_razorpay_secret_here
NEXT_PUBLIC_RAZORPAY_KEY=your_live_razorpay_key_here

# ===== FRONTEND URLs =====
FRONTEND_URL=https://skillyug.com
NEXT_PUBLIC_API_URL=https://api.skillyug.com/api
NEXT_PUBLIC_BACKEND_URL=https://api.skillyug.com

# ===== BACKEND =====
BACKEND_URL=https://api.skillyug.com
DATABASE_URL=postgresql://skillyug_user:your-super-secure-postgres-password-here@postgres:5432/skillyug?schema=public

# ===== NEXTJS =====
NEXTAUTH_URL=https://skillyug.com

# ===== RECOMMENDATION ENGINE =====
RECOMMENDATION_ENGINE_URL=http://recommendation-engine:8003
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_COLLECTION=course_embeddings
AUTO_LOAD_COURSES=true
COURSES_JSON_PATH=/app/data/courses.json

# ===== PERFORMANCE & RELIABILITY =====
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
MODEL_CACHE_SIZE=1000
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ===== SECURITY =====
CORS_ORIGINS=https://skillyug.com,https://www.skillyug.com
ALLOWED_HOSTS=skillyug.com,www.skillyug.com,api.skillyug.com

# ===== SSL/HTTPS =====
# Traefik will handle SSL termination in production
# Make sure to configure proper SSL certificates in your deployment

# ===== LOGGING =====
LOG_LEVEL=info
NODE_ENV=production

# ===== EMAIL CONFIGURATION =====
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=your_sendgrid_api_key_here

# ===== AWS S3 (Optional) =====
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=skillyug-uploads

# ===== ENVIRONMENT =====
NODE_ENV=production